// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//TODO Implement specific datatype to improve security and performance
model User {
  id         Int       @id @default(autoincrement())
  name       String    @db.Char(70)
  email      String    @unique @db.Char(70)
  password   String    @db.Char(150)
  brand      String    @unique @db.Char(8)
  Ox         Ox[]
  active     Boolean   @default(true) @db.Boolean()
  deleted_at DateTime? @db.Timestamp()
  created_at DateTime  @default(now()) @db.Timestamp()
  updated_at DateTime  @default(now()) @db.Timestamp()
}

model Ox {
  id         Int       @id @default(autoincrement())
  marked     Boolean   @default(false) @db.Boolean
  earring    String?   @db.Char(7)
  born_date  DateTime  @db.Date()
  owner      User      @relation(fields: [ownerId], references: [id])
  ownerId    Int       @db.Integer()
  genre      Oxgenre
  active     Boolean   @default(true) @db.Boolean()
  created_at DateTime  @default(now()) @db.Timestamp()
  updated_at DateTime  @default(now()) @db.Timestamp()
  deleted_at DateTime? @db.Timestamp()
}

enum Oxgenre {
  Male
  Female
}
